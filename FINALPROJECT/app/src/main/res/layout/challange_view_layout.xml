<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startChallengeBtn"
    android:layout_width="wrap_content"
    android:layout_height="350dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/post_background"
        android:padding="10dp"
        android:layout_marginEnd="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/post_background"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:src="@drawable/dumbbell"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/DIY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:src="@drawable/craft"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/Food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:src="@drawable/chef"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/Music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:src="@drawable/musicnote"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:src="@drawable/camera"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/Book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:src="@drawable/openbook"
                android:visibility="invisible"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_challange"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/man" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tagText"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:textColor="#3f9dff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="87dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:background="@color/morange"
                android:src="@android:drawable/ic_media_play" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>