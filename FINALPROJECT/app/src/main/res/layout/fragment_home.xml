<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/back3"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp">

        <ImageButton
            android:id="@+id/Sportb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="center"
            android:src="@drawable/dumbbell" />

        <ImageButton
            android:id="@+id/DIYb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="center"
            android:src="@drawable/craft"
            />

        <ImageButton
            android:id="@+id/Foodb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="center"
            android:src="@drawable/chef"
           />

        <ImageButton
            android:id="@+id/Musicb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="center"
            android:src="@drawable/musicnote"
             />

        <ImageButton
            android:id="@+id/Photob"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="center"
            android:src="@drawable/camera"
             />

        <ImageButton
            android:id="@+id/Bookb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:scaleType="center"
            android:src="@drawable/openbook"
           />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challange_list_DAY"
        android:layout_width="414dp"
        android:layout_height="568dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>